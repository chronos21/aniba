<%- include('partials/header', {useVideoJS: true}) %>

    <main>
        <h2><%= data.title %></h2>
        <video style="max-width: 100%;" id="my-video" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="auto" width="640" data-setup="{}">
            <source src="/api/video?url=<%= data.video %>&embed=<%= data.embed %>" type="video/mp4" />
            <p class="vjs-no-js">
                <a href="/api/video?url=<%= data.video %>&embed=<%= data.embed %>">Download Video</a>
            </p>
        </video>
        <h1></h1>
        <video id="player" playsinline controls>
            <source src="/api/video?url=<%= data.video %>&embed=<%= data.embed %>" type="video/mp4" />
        </video>

        <div>
            <a href="<%= data.prev %>">
                Prev
            </a>
            <br>
            <a href="<%= data.all %>">
                All Episodes
            </a>
            <br>
            <a href="<%= data.next %>">
                Next
            </a>
        </div>

        <script src="//vjs.zencdn.net/5.4.6/video.min.js"></script>
        <script src="https://cdn.plyr.io/3.6.4/plyr.polyfilled.js"></script>
        <script>
            const player = new Plyr('#player');
        </script>
       
    </main>

    <%- include('partials/footer') %>