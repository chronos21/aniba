<%- include('./header') %>
<div class="ui container">
    <div class="ui relaxed selection list" style="margin-bottom: 30px;">
        <% data.forEach(function(item){ %>
        <div class="item">
            <a class="mini ui icon button" 
            target="_blank" href="/<%= item.Episode.uri %>?download=true"   
            style="float: right;">
                <i class="download icon"></i>
            </a>
            <div class="content">
                <a class="header" href="/<%= item.Episode.uri %>" target="_blank">
                    <%= item.Show.title %> - Episode <%= item.Episode.number %>
                </a>
                <div class="description"><%= moment(item.createdAt).fromNow() %>.</div>
            </div>
           
        </div>
        <% }); %>
    </div>
</div>
<%- include('./footer') %>